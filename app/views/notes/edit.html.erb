<%= link_to "Back to Job", user_job_path(current_user, @job) %>
<h1 class="text-center title"><%= @job.position %> <span class="title-min">@</span> <em><%= @job.company %></em> <span class="title-min">in</span> <%= @job.location %></h1>
<div class="container-fluid">
  <div class="col-md-4 col-md-offset-4 has-error">
    <div class="form-group">
      <div class="text-center">
        <p><em><strong>Created:</strong> <%= @note.created_at.to_s(:short) %> | <strong>Updated:</strong> <%= @note.updated_at.to_s(:short) %></em></p>
        <p></p>
      </div>
      <%= form_for [current_user, @job, @job.notes.build], url: {action: 'update'}, html: {method: 'put'} do |f| %>
        <%= f.text_field :title, value: "#{@note.title}", class: "form-control" %>
        <%= f.text_area :text, value: "#{@note.text}", class: "form-control" %>
        <%= f.submit "Save Note", class: "form-control btn btn-danger" %>
      <% end %>
      <%= link_to 'Delete Note', user_job_note_path(current_user, @job, @note), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default form-control" %>
    </div>
  </div>
</div>


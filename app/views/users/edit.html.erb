<div class="container-fluid">
  <%= link_to "< Back to Profile", user_path(current_user) %>
  <h4 class="greeting text-center"><%= current_user.first_name %>'s Profile</h4>
  <div class="col-md-4 col-md-offset-4 has-error">
    <div class="form-group edit-job-form">
      <%= form_for current_user, url: {action: 'update'}, html: {method: 'put'} do |f| %>
        <%= f.text_field :first_name, placeholder: 'First Name', value: "#{current_user.first_name}", class: "form-control" %>
        <%= f.text_field :last_name, placeholder: 'Last Name', value: "#{current_user.last_name}", class: "form-control" %>
        <%= f.text_field :email, placeholder: 'Email', value: "#{current_user.email}", class: "form-control" %>
        <%= f.submit "Save Profile", class: "form-control btn btn-danger" %>
      <% end %>

      <%= link_to 'Delete Profile', user_path(current_user), method: :delete, data: {confirm: "Are you sure?"}, class: "form-control btn btn-default" %>
    </div>
  </div>
</div>
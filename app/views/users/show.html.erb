<div class="container-fluid">
  <%= link_to "< Back to Dashboard", user_jobs_path(current_user) %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="greeting-container">
        <h4 class="greeting text-center"><%= current_user.first_name %>'s Profile</h4>
      </div>
      <div class="job-info">
        <h4 class="job-info-text first-job-info-text"><em>First Name:&nbsp; </em><%= current_user.first_name %>
        </h4>
      </div>
      <div class="job-info">
        <h4 class="job-info-text first-job-info-text"><em>Last Name:&nbsp; </em><%= current_user.last_name %>
        </h4>
      </div>
      <div class="job-info">
        <h4 class="job-info-text first-job-info-text"><em>Email:&nbsp; </em><%= current_user.email %>
        </h4>
      </div>
      <div>
        <%= link_to 'Edit Profile', edit_user_path(current_user), class: "btn btn-md btn-danger form-control add-note-btn" %>
      </div>
    </div>
  </div>
</div>




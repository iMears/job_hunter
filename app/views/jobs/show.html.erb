<div class="container-fluid">
  <%= link_to "Back to Jobs", user_jobs_path %>

  <h1 class="text-center"><%= @job.position %> <span class="title-min">@</span> <em><%= @job.company %></em> <span class="title-min">in</span> <%= @job.location %></h1>
  <div class="job-btns">
    <div><%= link_to 'Edit Job', edit_user_job_path(current_user, @job), class: "btn btn-md btn-default edit-btn" %></div>
    <div><%= link_to 'Delete Job', user_job_path(current_user, @job), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-md btn-default del-btn" %></div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-1"> <!-- left column job details -->
      <div class="contact">
        <%= link_to 'Add Contact', edit_user_job_path(current_user, @job), remote: true, class: "btn btn-md btn-danger add-note-btn" %>
      </div>
      <div class="description">
        <%= link_to 'Add Description', edit_user_job_path(current_user, @job), remote: true, class: "btn btn-md btn-danger add-note-btn" %>
      </div>
    </div>

    <div class="col-md-4 col-md-offset-2"> <!-- right column notes -->
      <div><%= link_to 'Add Note', new_user_job_note_path(current_user, @job), remote: true, class: "btn btn-md btn-danger add-note-btn" %></div>

      <div id="note-form"></div>

      <div>
        <% @notes.each do |note| %>
          <%= link_to user_job_note_path(current_user, @job, note) do %>
            <div class="note-container">
              <div class="row">
                <div class="pull-left"><h4 class="single-note-title"><em><%= note.title %></em></h4></div>
                <div class="pull-right note"><%= note.updated_at.to_s(:short) %></div>
              </div>
              <div class=""><%= note.text %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div> <!-- end row -->
</div> <!-- end container -->
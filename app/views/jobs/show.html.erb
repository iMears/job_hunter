<div class="container-fluid">
  <%= link_to "< Back to Dashboard", user_jobs_path %>

  <h1 class="text-center title"><%= @job.position %> <span class="title-min">@</span> <em><%= @job.company %></em> <span class="title-min">in</span> <%= @job.location %></h1>

  <div class="row">
    <div class="col-md-5 col-md-offset-1"> <!-- left column job details -->
      <div class="contact">
        <div>
          <%= link_to 'Edit Job', edit_user_job_path(current_user, @job), class: "btn btn-md btn-danger add-note-btn" %>
        </div>
        <div class="job-info">
          <h4 class="job-info-text first-job-info-text"><em>Job Status:&nbsp; </em><%= @job.category.capitalize%></h4>
        </div>
        <div class="job-info">
          <h4 class="job-info-text first-job-info-text"><em>Contact Name:&nbsp; </em><%= @job.manager%></h4>
        </div>
        <div class="job-info">
          <h4 class="job-info-text first-job-info-text"><em>Contact Email:&nbsp;  </em><%= @job.job_email%></h4>
        </div>
        <div class="job-info">
          <h4 class="job-info-text first-job-info-text"><em>Phone Number:&nbsp;  </em><%= @job.phone_number%></h4>
        </div>
        <div class="job-info">
          <h4 class="job-info-text first-job-info-text"><em>Description:</em></h4><p><pre><%= @job.description%></pre></p>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-md-offset-1"> <!-- right column notes -->

      <div>
        <%= link_to 'Add Note', new_user_job_note_path(current_user, @job), remote: true, class: "btn btn-md btn-danger add-note-btn" %>
      </div>

      <div id="note-form"></div>

      <div class="all-notes">
        <% @notes.each do |note| %>
          <%= link_to edit_user_job_note_path(current_user, @job, note) do %>
            <div class="note-container">
              <div class="row">
                <div class="pull-left">
                  <h4 class="single-note-title">
                    <em><%= note.title %></em>
                  </h4>
                </div>
                <div class="pull-right note">
                  <%= note.updated_at.to_s(:short) %>
                </div>
              </div>
              <div><pre class="pre-note"><%= note.text %></pre></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div> <!-- end row -->
</div> <!-- end container -->
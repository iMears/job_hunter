<h1><%= @job.company %> - <%= @job.location %> - <%= @job.position %></h1>

<div><%= link_to 'Edit Job', edit_user_job_path(current_user, @job), class: "btn btn-xs btn-warning" %></div>
<div><%= link_to 'Delete Job', user_job_path(current_user, @job), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></div>

<div><%= link_to 'Add Note', new_user_job_note_path(current_user, @job), class: "btn btn-xs btn-success" %></div>

<div>
  <% @notes.each do |note| %>
    <%= link_to user_job_note_path(current_user, @job, note) do %>
      <div>
        <%= note.title %>
        <%= note.updated_at.to_s(:short) %>
        <%= note.text %>
      </div>
    <% end %>
  <% end %>
</div>
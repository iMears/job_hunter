<section>
  <div class="container">
  <%= link_to "< Back", root_path %>
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="text-muted">Contact Us</h2>
      </div>
    </div>
    <br><br>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 text-center">
        <h4 class="text-muted">Have questions or comments? Please send us a message. We will get back to you soon!</h4>
      </div>
    </div>
    <br><br>
    <div class="row">
      <div class="col-lg-12">
        <form action="//formspree.io/maxwellmears@gmail.com" name="sentMessage" id="contactForm" method="POST" novalidate>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <input type="email" name="_replyto" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div class="form-group">
                <textarea type="text" name="body" class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-lg-12 text-center">
              <button type="submit"  value="Send" class="btn btn-xl btn-danger">Send Message</button>
            </div>
          </div>
          <input type="hidden" name="_next" value="//imears.com" />
          <input type="hidden" name="_cc" value="ruslan.idrisov01@gmail.com" />
        </form>
      </div>
    </div>
  </div>
</section>
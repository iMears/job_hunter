<div class="col-lg-6 col-lg-offset-3 text-center">
  <h4 class="greeting">Forgot your password?</h4>
</div>
<div class="form-container form-group has-error">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Your Email *" %>
    </div>
    <div class="actions">
      <%= f.submit "Send Reset Password Instructions", class: "btn btn-danger form-control" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>